---
import Button from "../components/Button.astro";
const { img, tekst, link } = Astro.props;
---

 <div class="container">
<img src={img} alt="">

  <div class="centered">
 <a href={link}>
    <Button variant="lys" size="stor">{tekst}</Button></a>
  </div>
</div> 
<style>


/* Container */
.container {
  position: relative;
  text-align: center;
 margin: 1rem 1rem 1rem 1rem;
}

/* Centreret tekst */
.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

h1{
    color: var(--grey50);
}

</style>